extends layout.pug

block content
  h1 Hello #{user.id}!
  img(src=user.images[0].url, class='circular_image')

  table
    each t in tracks 
      tr  
        - var artist_name = t.track.artist.name
        - var track_name = t.track.name 
        - var track_preview = t.track.preview_url 
        - var artist_id = t.track.artists.id[0].id
        - var track_id = t.track.id 

      td #{artist_name}
      td a(href='recommendations?artist=' + artist_id+'') #{track_name}
      td: a(href=track_preview) Preview